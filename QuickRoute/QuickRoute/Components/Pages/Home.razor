@page "/"
@inject NavigationManager Navigation
@inject CarrosService CarrosService
@inject IHttpContextAccessor HttpContextAccessor

<a id="page-top"></a>

<!-- Masthead/Header -->
<header class="masthead">
    <div class="container text-center">
        <div class="masthead-subheading">¡Bienvenido a la innovación de la importación!</div>
        <h1 class="masthead-heading">Explora nuestro catálogo exclusivo</h1>
        @if (!IsAuthenticated)
        {
            <a href="/Account/Register" class="btn btn-primary btn-lg px-4 py-3">Regístrate para ver precios</a>
        }
    </div>

    <!-- Texto sobre las flechas -->
    <div class="scroll-hint-text">Explora nuestro catálogo</div>

    <!-- Flechas -->
    <a href="#catalogo" class="scroll-hint" style="scroll-margin-top: 65px;">
        <div class="arrow-stack">
            <div class="arrow-down"></div>
            <div class="arrow-down"></div>
            <div class="arrow-down"></div>
        </div>
    </a>
</header>

<!-- Catálogo de Vehículos -->
<section class="py-5" id="catalogo">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-heading">Nuestros Vehículos Disponibles</h2>
            <p class="text-muted">Selecciona un vehículo para ver más detalles</p>
        </div>

        @if (carros == null)
        {
            <div class="text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var carro in carros)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 carro-card" @onclick="() => VerDetalle(carro.CarroId)">
                            <div class="carro-img-container">
                                <img class="card-img-top" src="@carro.ImagenUrl" alt="@carro.Marca @carro.Modelo">
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">@carro.Marca @carro.Modelo</h4>
                                <h5>@carro.Color</h5>
                                <p class="card-text">Año: @carro.FechaFabricacion.Year</p>
                            </div>
                            <div class="card-footer bg-transparent">
                                @if (IsAuthenticated)
                                {
                                    <h5 class="text-primary">@carro.Precio.ToString("C")</h5>
                                }
                                else
                                {
                                    <h5 class="text-primary">Inicia sesión para ver precio</h5>
                                }
                                @if (carro.CantidadStock > 0)
                                {
                                    <span class="badge bg-success">Disponible (@carro.CantidadStock)</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Agotado</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

<!-- Footer -->
<footer class="footer">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 text-lg-start text-center mb-3 mb-lg-0">
                Copyright &copy; QuickRoute 2025
            </div>
            <div class="col-lg-4 my-3 my-lg-0">
                <div class="d-flex justify-content-center">
                    <a class="btn btn-outline-light btn-social mx-1" href="https://github.com/Nathiel12/QuickRoute">
                        <i class="fab fa-github"></i>
                    </a>
                    <a class="btn btn-outline-light btn-social mx-1" href="https://www.linkedin.com/in/victor-s-ferreiras/">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 text-lg-end text-center mt-3 mt-lg-0">
                <a class="link-light text-decoration-none" href="#page-top">Volver arriba</a>
            </div>
        </div>
    </div>
</footer>

@code {
    private List<Carros> carros;
    private bool IsAuthenticated => HttpContextAccessor.HttpContext?.User?.Identity?.IsAuthenticated ?? false;
    
    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Obtener todos los carros disponibles
            carros = await CarrosService.ListarProductos(c => true);
        }
        catch (Exception ex)
        {
            // Manejar error (podrías mostrar un mensaje al usuario)
            Console.WriteLine($"Error al cargar carros: {ex.Message}");
        }
    }
    
    private void VerDetalle(int carroId)
    {
        Navigation.NavigateTo($"/detalle-vehiculo/{carroId}");
    }
}